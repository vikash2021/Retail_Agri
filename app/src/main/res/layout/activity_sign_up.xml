<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".sign_up">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"

        android:foregroundGravity="center"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="350dp"
        android:padding="10dp"
        app:srcCompat="@drawable/log"
        tools:ignore="RtlCompat" />


    <EditText
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/t1"

        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t1"

        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"

        android:hint="Mobile Number"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t4"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Address Line1"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t5"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Address Line2"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t7"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t6"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="State"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t6"

        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="District"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/t9"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t8"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Area Pincode"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />


    <EditText
        android:id="@+id/t10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/t9"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Create Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <EditText
        android:id="@+id/t11"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:layout_below="@+id/t10"

        android:hint="Confirm Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#455a64" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:text="SignUp"
        android:textSize="20sp"
        android:background="#43a047"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/t11"

        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="#cfd8dc"
        android:foregroundGravity="center"
        android:id="@+id/b1"/>

</RelativeLayout>